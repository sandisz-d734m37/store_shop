<h1>All Products<h1>

  <% @products.each do |product| %>
    <h3><a href="/products/<%= product.id %>"><%= product.name %></a></h3>
    <p>Description: <strong><%= product.description %></strong></p>
    <p>Price: <strong>$<%= product.price %></strong></p>
    <p>Total quantity (between all locations): <strong><%= product.quantity %> </strong></p>
    <p>On sale: <strong><%= product.sale_status %></strong></p>
    <p>Available at: <strong><%= product.available_at(product.store_id) %></strong></p> 
  <% end %>

<br><h3><a href='/products/new'>Make a new product</a></h3>
