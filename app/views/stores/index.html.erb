<h1>All of your very many stores</h1>
<h4> as you've created and wanted to see (read) them</h4><br><br><hr>
<% @stores.each do |store| %>
  <h2><a href="/stores/<%= store.id %>"><%= store.name %></a></h2>
  <p>Created: <%= store.created_at.to_s %><p>
  <p><a href="stores/<%= store.id %>/products">This stores products</a></p>
  <%= button_to "Update #{store.name}", "stores/#{store.id}/edit", method: :get %>
  <%= form_with url: "/stores/#{store.id}", method: :delete, local: true do |form| %>
    <%= form.submit "Delete #{store.name}" %>
  <% end %>
  <hr/>
<% end %>

<br><h3><a href='/stores/new'>New Store</a></h3>
